{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["esnext", "dom"],
    "types": ["@types/node"],

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,

    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src"]
}

